<UserControl x:Class="POS_display.wpfPrices"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS_display"
             mc:Ignorable="d" 
             d:DesignHeight="1024" d:DesignWidth="1280">
        <Grid>
            <Label Content="Vaisto pavadinimas" HorizontalAlignment="Left" Margin="43,170,0,0" VerticalAlignment="Top" Background="Transparent" Foreground="#FF002664" FontFamily="Microsoft Sans Serif" FontSize="20" FontWeight="Bold"/>
            <Label x:Name="label2" Content="Kompensacijos proc." HorizontalAlignment="Left" Margin="43,205,0,0" VerticalAlignment="Top" Background="Transparent" Foreground="#FF002664" FontFamily="Microsoft Sans Serif" FontSize="20" FontWeight="Bold"/>
            <Label Content="Perkamas doz. kiekis" HorizontalAlignment="Left" Margin="43,240,0,0" VerticalAlignment="Top" Background="Transparent" Foreground="#FF002664" FontFamily="Microsoft Sans Serif" FontSize="20" FontWeight="Bold"/>
            <Label Content="Tik modifikuoti" HorizontalAlignment="Left" Margin="43,275,0,0" VerticalAlignment="Top" Background="Transparent" Foreground="#FF002664" FontFamily="Microsoft Sans Serif" FontSize="20" FontWeight="Bold"/>
            <Label x:Name="lblName" Content="" HorizontalAlignment="Left" Margin="293,170,0,0" VerticalAlignment="Top" Background="Transparent" Foreground="#FF002664" FontFamily="Microsoft Sans Serif" FontSize="20" RenderTransformOrigin="0.644,0.38" TextBlock.TextAlignment="Left"/>
            <Label x:Name="lblCompPercent" Content="" HorizontalAlignment="Left" Margin="293,205,0,0" VerticalAlignment="Top" Background="Transparent" Foreground="#FF002664" FontFamily="Microsoft Sans Serif" FontSize="20" RenderTransformOrigin="0.8,3" TextBlock.TextAlignment="Left"/>
            <Label x:Name="lblDosage" Content="" HorizontalAlignment="Left" Margin="293,240,0,0" VerticalAlignment="Top" Background="Transparent" Foreground="#FF002664" FontFamily="Microsoft Sans Serif" FontSize="20" RenderTransformOrigin="0.644,0.38" TextBlock.TextAlignment="Left"/>
            <Label x:Name="lblModified" Content="" HorizontalAlignment="Left" Margin="293,275,0,0" VerticalAlignment="Top" Background="Transparent" Foreground="#FF002664" FontFamily="Microsoft Sans Serif" FontSize="20" RenderTransformOrigin="0.6,3.545" TextBlock.TextAlignment="Left"/>
            <DataGrid x:Name="gvPricesComp" HorizontalAlignment="Stretch" Height="497" Margin="43,328,75,0" VerticalAlignment="Top" Background="Transparent" RowBackground="Transparent" BorderBrush="Transparent" VerticalGridLinesBrush="Transparent" HorizontalGridLinesBrush="#FF002664" Foreground="#FF002664" ItemsSource="{Binding}" AutoGenerateColumns="False" RowHeight="50" IsReadOnly="True" EnableRowVirtualization="False">
                <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding shortname}" Width="*" Header="Vaisto pavadinimas / Medicinos pagalbos priemonės pavadinimas" FontFamily="Microsoft Sans Serif" FontSize="19" SortMemberPath="shortname">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="TextWrapping" Value="Wrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding RetailPrice}" Width="170" Header="Didžiausia mažmeninė kaina, EUR" IsReadOnly="True" FontFamily="Microsoft Sans Serif" FontSize="19" SortMemberPath="RetailPrice">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="HorizontalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding VKBPrice}" Width="170" Header="Valstybės kompensuojamoji dalis, EUR" IsReadOnly="True" FontFamily="Microsoft Sans Serif" FontSize="19" SortMemberPath="VKBPrice">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="HorizontalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Premium}" Width="170" Header="Didžiausia priemoka, EUR" IsReadOnly="True" FontFamily="Microsoft Sans Serif" FontSize="19" SortMemberPath="Premium">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="HorizontalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding PrepComp}" Width="170" Header="Priemoka pritaikius nuolaidą, EUR" IsReadOnly="True" FontFamily="Microsoft Sans Serif" FontSize="19" SortMemberPath="PrepComp" FontWeight="Bold">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="HorizontalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="FontFamily" Value="Microsoft Sans Serif"/>
                        <Setter Property="FontSize" Value="20"/>
                        <Setter Property="Foreground" Value="#FF002664"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="ContentTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="{Binding}"></TextBlock>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.RowHeaderStyle>
                    <Style TargetType="{x:Type DataGridRowHeader}">
                        <Setter Property="Background" Value="Transparent" />
                    </Style>
                </DataGrid.RowHeaderStyle>
                <DataGrid.CellStyle>
                    <Style TargetType="{x:Type DataGridCell}">
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="TextBlock.Foreground" Value="#FF58A618" />
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                            </Trigger>
                        <Trigger Property="IsSelected" Value="False">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="TextBlock.Foreground" Value="#FF002664" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                        </Trigger>
                    </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.ItemContainerStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="Transparent" />
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                <Setter Property="FontWeight" Value="Bold" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.ItemContainerStyle>
            </DataGrid>
            <DataGrid x:Name="gvPricesUncomp" HorizontalAlignment="Stretch" Height="497" Margin="43,328,73,0" VerticalAlignment="Top" Background="Transparent" RowBackground="Transparent" BorderBrush="Transparent" VerticalGridLinesBrush="Transparent" HorizontalGridLinesBrush="#FF002664" Foreground="#FF002664" ItemsSource="{Binding}" AutoGenerateColumns="False" RowHeight="50" IsReadOnly="True" EnableRowVirtualization="False" d:IsHidden="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding shortname}" Width="*" Header="Vaisto pavadinimas" FontFamily="Microsoft Sans Serif" FontSize="19" SortMemberPath="shortname">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="TextWrapping" Value="Wrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding RetailPrice}" Width="170" Header="Didžiausia mažmeninė kaina, EUR" IsReadOnly="True" FontFamily="Microsoft Sans Serif" FontSize="19" SortMemberPath="RetailPrice">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="HorizontalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding CompensatedPrice}" Width="170" Header="Kaina vaistinėje, EUR" IsReadOnly="True" FontFamily="Microsoft Sans Serif" FontSize="19" SortMemberPath="CompensatedPrice" FontWeight="Bold">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="HorizontalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="FontFamily" Value="Microsoft Sans Serif"/>
                        <Setter Property="FontSize" Value="20"/>
                        <Setter Property="Foreground" Value="#FF002664"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="ContentTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="{Binding}"/>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.RowHeaderStyle>
                    <Style TargetType="{x:Type DataGridRowHeader}">
                        <Setter Property="Background" Value="Transparent" />
                    </Style>
                </DataGrid.RowHeaderStyle>
                <DataGrid.CellStyle>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="TextBlock.Foreground" Value="#FF58A618" />
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="TextBlock.Foreground" Value="#FF002664" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.ItemContainerStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="Transparent" />
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                <Setter Property="FontWeight" Value="Bold" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.ItemContainerStyle>
            </DataGrid>
            <Separator x:Name="sep2" Height="20" Margin="43,308,73,0" VerticalAlignment="Top" Foreground="#FF58A618"/>

        </Grid>
</UserControl>
