<Window x:Class="POS_display.wpf.ActiveSubstanceSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Veikliosios medžiagos pasirinkimas" Height="600" Width="700" 
        FocusManager.FocusedElement="{Binding ElementName=SearchTextBox}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Content="Paieška" VerticalAlignment="Center" Margin="10" Grid.Row="0" Grid.Column="0" FontSize="20"/>

        <Grid Grid.Row="0" Grid.Column="1" Margin="5">

            <TextBox x:Name="SearchTextBox" 
                     VerticalAlignment="Center" 
                     HorizontalAlignment="Stretch" 
                     Padding="5" 
                     BorderBrush="Gray" 
                     BorderThickness="1"
                     FontSize="20"
                     TextChanged="SearchTextBox_TextChanged"/>

            <TextBlock IsHitTestVisible="False" Text="Ieškoti pagal veikliąja medžiagą" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="DarkGray" FontSize="20">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>

        <ListBox x:Name="SelectionListBox" Grid.Row="1" Grid.ColumnSpan="2" Margin="10" MouseDoubleClick="SelectionListBox_MouseDoubleClick"/>

        <Button Content="Pritaikyti" Grid.Row="2" Grid.ColumnSpan="2" Width="75" Margin="10" HorizontalAlignment="Left" Click="OKButton_Click"/>
    </Grid>
</Window>