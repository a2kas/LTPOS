<UserControl x:Class="POS_display.wpf.View.FMDAlertReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS_display.wpf.View"
             xmlns:wpf="clr-namespace:POS_display.wpf"
             xmlns:POS_display="clr-namespace:POS_display"
             mc:Ignorable="d" 
             Height="800" Width="650">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="300" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="200" />
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Content="Spausdinti" Height="40" HorizontalAlignment="Left" Command="{Binding PerformPrintCommand}" Margin="5,5,0,0"  
                Name="PrintDocumentButton" IsEnabled="{Binding IsPrintEnabled}" VerticalAlignment="Top" Width="134" />
        <FlowDocumentScrollViewer x:Name="FlowDocumentView" Grid.Row="1" Margin="0,0,0,0" Document="{Binding ReportDocument}">
        </FlowDocumentScrollViewer>
        <Label Name="MistakeTypeLabel" Grid.Row="2" Content="Pasirinkite klaidos tipą:" HorizontalAlignment="Left" VerticalAlignment="Center"  FontSize="14" FontFamily="Arial"  FontWeight="Bold" />
        <ComboBox Grid.Row="2" Margin="177,0,0,0" Name="MistakeTypeValue" HorizontalAlignment="Left" VerticalAlignment="Center" Width="453" Height="20" ItemsSource="{Binding MistakeTypeEntries}" DisplayMemberPath="Value" SelectedValue="0" SelectedValuePath="Id"></ComboBox>
        <Label Name="CommentLabel" Grid.Row="3" Content="Komentaras:" HorizontalAlignment="Left" VerticalAlignment="Center"  FontSize="14" FontFamily="Arial"  FontWeight="Bold" />
        <TextBox Name="Comment" Grid.Row="4" AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding Comment}" />
        <Label Name="NotificationLabel" Grid.Row="5" Content="* Prašome nurodyti informaciją, jeigu nesutampa su aukščiau nurodyta" HorizontalAlignment="Left" VerticalAlignment="Top"  FontSize="14" FontFamily="Arial"  FontWeight="Bold" Margin="0,5,0,0" />
        <Button Grid.Row="6" Content="Siųsti" Height="40" HorizontalAlignment="Right"  
                Name="ReportButton" VerticalAlignment="Top" Width="134"  
                Command="{Binding SendEmailCommand}" IsEnabled="{Binding IsSendEnabled}" Margin="0,0,5,0" />
        <Label x:Name="NotificationLabel2" Grid.Row="5" Content="Jeigu yra galimybė, prašome pridėti nuotrauką" HorizontalAlignment="Left" VerticalAlignment="Top"  FontSize="14" FontFamily="Arial"  FontWeight="Bold" Margin="10,36,0,0" />
        <Button Grid.Row="6" Content="Uždaryti" Height="40" HorizontalAlignment="Right"  
            x:Name="CloseButton" VerticalAlignment="Top" Width="134"  
            Command="{Binding CloseCommand}" IsEnabled="{Binding IsCloseEnabled}" Margin="0,0,144,0" />
    </Grid>

</UserControl>
