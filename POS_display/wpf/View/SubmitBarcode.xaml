<UserControl x:Class="POS_display.wpf.View.SubmitBarcode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS_display.wpf.View"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d" 
             Height="130" Width="500">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="style/defaultStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="95"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Content="{Binding ProductName}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource boldLabel}"/>
        <local:TextBox2D x:Name="textBox2D" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding Barcode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource defaultTextBox}">
            <TextBox.InputBindings>
                <KeyBinding Key="Return" 
                    Command="{Binding SubmitBarcodeCommand}"/>
            </TextBox.InputBindings>
        </local:TextBox2D>
    </Grid>
</UserControl>
