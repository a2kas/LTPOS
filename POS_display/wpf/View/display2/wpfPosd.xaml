<UserControl x:Class="POS_display.wpf.View.display2.wpfPosd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS_display.wpf.View.display2"
             mc:Ignorable="d" 
             d:DesignHeight="1024" d:DesignWidth="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25" />
            <ColumnDefinition Width="345" />
            <ColumnDefinition Width="88*" />
            <ColumnDefinition Width="25" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="28*" />
            <RowDefinition Height="55*" />
            <RowDefinition Height="43*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="20*" />
        </Grid.RowDefinitions>
        <Separator x:Name="sep1" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Right" Height="10" Margin="0,10,0,0" VerticalAlignment="Top" Width="248" Foreground="#FF58A618"/>
        <Label x:Name="lblTotalInfo" Grid.Column="2" Grid.Row="2" Content="Viso mokėti" Margin="0,18,140,0" HorizontalAlignment="Right" VerticalAlignment="Top" Background="Transparent" Foreground="#FF002664" FontFamily="Microsoft Sans Serif" FontSize="18" FontWeight="Bold"/>
        <Label x:Name="lblTotalValue" Grid.Column="2" Grid.Row="2" Margin="0,18,0,0" Content="" HorizontalAlignment="Right" VerticalAlignment="Top" Background="Transparent" Foreground="#FF002664" FontFamily="Microsoft Sans Serif" FontSize="18" RenderTransformOrigin="0.644,0.38" TextBlock.TextAlignment="Right"/>
        <Separator x:Name="sep2" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Right" Margin="0,45,0,0" Height="10" VerticalAlignment="Top" Width="248" Foreground="#FF58A618"/>
        <Label x:Name="lblInfo" Grid.Column="2" Grid.Row="2" Content="" HorizontalAlignment="Right" Margin="0,54,140,0" VerticalAlignment="Top" Background="Transparent" Foreground="#FF002664" FontFamily="Microsoft Sans Serif" FontSize="18" FontWeight="Bold" Height="101" TextBlock.TextAlignment="Right"/>
        <Label x:Name="lblValue" Grid.Column="2" Grid.Row="2" Content="" HorizontalAlignment="Right" Margin="0,54,0,0" VerticalAlignment="Top" Background="Transparent" Foreground="#FF002664" FontFamily="Microsoft Sans Serif" FontSize="18" RenderTransformOrigin="0.644,0.38" Height="101" TextBlock.TextAlignment="Right"/>
        <Image x:Name="imgCard" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="4" Grid.RowSpan="4" HorizontalAlignment="Right" VerticalAlignment="Bottom" MaxWidth="122" MaxHeight="87" Margin="0,45,15,45" />
        <DataGrid x:Name="gvPosd" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Background="Transparent" RowBackground="Transparent" BorderBrush="Transparent" VerticalGridLinesBrush="Transparent" HorizontalGridLinesBrush="#FF002664" Foreground="#FF002664" ItemsSource="{Binding}" AutoGenerateColumns="False" IsReadOnly="True" MinRowHeight="42" VerticalScrollBarVisibility="Disabled">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding barcodename}" Width="*" FontFamily="Microsoft Sans Serif" FontSize="18" Foreground="#FF002664">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="Padding" Value="0,0,5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding qty}" Header="Kiekis" IsReadOnly="True" FontFamily="Microsoft Sans Serif" FontSize="18" Foreground="#FF002664">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding price}" Header="Kaina" IsReadOnly="True" FontFamily="Microsoft Sans Serif" FontSize="18" Foreground="#FF002664">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding discount_sum}" Header="Nuolaida" IsReadOnly="True" FontFamily="Microsoft Sans Serif" FontSize="18" Foreground="#FF002664">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding sum}" Header="Suma" Width="70" IsReadOnly="True" FontFamily="Microsoft Sans Serif" FontSize="18" Foreground="#FF002664">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding cheque_sum}" Header="GSK" IsReadOnly="True" FontFamily="Microsoft Sans Serif" FontSize="18" Foreground="#FF002664">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding cheque_sum_insurance}" Header="Draud." IsReadOnly="True" FontFamily="Microsoft Sans Serif" FontSize="18" Foreground="#FF002664">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="FontFamily" Value="Microsoft Sans Serif"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="Foreground" Value="#FF002664"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="0,0,15,0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.RowHeaderStyle>
                <Style TargetType="{x:Type DataGridRowHeader}">
                    <Setter Property="Background" Value="Transparent" />
                </Style>
            </DataGrid.RowHeaderStyle>
        </DataGrid>
        <Border x:Name="wpfRecommendationBorder1" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" Visibility="Visible" Grid.RowSpan="4" Margin="160,0,0,5" BorderThickness="1" CornerRadius="8" Width="440" Height="178" BorderBrush="#FFADA8A5" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <local:wpfRecommendation x:Name="wpfRecommendation1" />
        </Border>
        <Border x:Name="wpfRecommendationBorder2" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" Visibility="Visible" Grid.RowSpan="4" Margin="620,0,0,5" BorderThickness="1" CornerRadius="8" Width="440" Height="178" BorderBrush="#FFADA8A5" HorizontalAlignment="Left" VerticalAlignment="Bottom" >
            <local:wpfRecommendation x:Name="wpfRecommendation2" />
        </Border>
    </Grid>
</UserControl>
