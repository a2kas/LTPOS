<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS_display.wpf.View.display2"
             xmlns:gif="http://wpfanimatedgif.codeplex.com" x:Class="POS_display.wpf.View.display2.wpfRecommendation"
             mc:Ignorable="d" 
             d:DesignHeight="178" d:DesignWidth="440">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="330" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="5" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="200*" />
            <RowDefinition Height="40*" />
        </Grid.RowDefinitions>
        <Border BorderThickness="1" CornerRadius="8,8,0,0" BorderBrush="#FFADA8A5" Background="#FF3AB54A" Grid.ColumnSpan="4"/>
        <Border BorderThickness="1" CornerRadius="0,0,8,8" BorderBrush="#FFADA8A5" HorizontalAlignment="Left" Height="148" Grid.Row="1" VerticalAlignment="Top" Width="440" Grid.ColumnSpan="4" Grid.RowSpan="2" Background="White"/>
        <Label x:Name="HeaderText" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Foreground="White" FontFamily="Arial" FontSize="20" FontWeight="Bold" TextBlock.TextAlignment="Right"/>
        <Image x:Name="RecommendationImg" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="330" Height="120" MaxHeight="120"/>
        <Border Grid.Column="2" Grid.Row="1" CornerRadius="8,0,8,0" BorderBrush="#FFADA8A5" Background="#FF3AB54A" Margin="0,15,0,60" >
            <TextBlock x:Name="RecommendationInfo1" TextWrapping="Wrap" Text="" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" FontSize="22"/>
        </Border>
        <TextBlock x:Name="RecommendationInfo2" Grid.Column="2" Grid.Row="1" TextWrapping="Wrap" Text="" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="Black" FontSize="25" Margin="0,70,0,0"/>
        <TextBlock x:Name="RecommendationInfo3" Grid.Column="2" Grid.Row="1" TextWrapping="Wrap" Text="" HorizontalAlignment="Center" TextDecorations= "Strikethrough" VerticalAlignment="Top" Foreground="Gray" FontSize="15" Margin="0,100,0,0"/>
        <Label x:Name="RecommendationText" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Content="" HorizontalAlignment="Center" Foreground="#FF002664" FontFamily="Arial" FontSize="15" FontWeight="Bold" TextBlock.TextAlignment="Right"/>
    </Grid>
</UserControl>
