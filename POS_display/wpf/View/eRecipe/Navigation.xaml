<UserControl x:Class="POS_display.wpf.View.Navigation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS_display.wpf.View"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="564">
    <Grid>
        <Button x:Name="btnPrevious" Content="&lt;&lt; Ankstesnis" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Width="90" Height="25" Click="btnPrevious_Click"/>
        <Button x:Name="btnNext" Content="Sekantis &gt;&gt;" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" Width="90" Height="25" Click="btnNext_Click"/>
        <Label x:Name="lblPageIndex" Content="1 / 0" HorizontalAlignment="Center" VerticalAlignment="Center" MouseLeftButtonDown="lblPageIndex_MouseLeftButtonDown"/>
    </Grid>
</UserControl>
