<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS_display" xmlns:EHealth="clr-namespace:Qas.EHealth.Models;assembly=Qas.EHealth.Models" x:Class="POS_display.wpf.View.eRecipe.wpfVaccinationOrderPdf"
             x:Name="uc"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Height="639" Width="410" Background="White" FontFamily="Calibri" HorizontalAlignment="Stretch" FontSize="13">
    <Grid x:Name="grVaccinationOrder" Margin="5">
        <Grid.DataContext>
            <EHealth:VaccineOrderDto/>
        </Grid.DataContext>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="159" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="tbHeader" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="Wrap" TextAlignment="Center"><Run Text="Dokumento Nr. "/><Run Text="{Binding CompositionId}"/><LineBreak/><Run x:Name="txtCreatedDate" FontSize="11" Text=""/></TextBlock>
        <TextBlock x:Name="tbInfo" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="Wrap"/>
        <Separator x:Name="sep1" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="tbPrescriptionHeader" Text="Paskyrimo informacija" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Left"/>
        <Separator x:Name="sep2" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"/>
        <TextBlock Text="Paskyrimo data:" Grid.Row="5" Grid.Column="0" FontSize="14"/>
        <TextBlock x:Name="tbEncounterDate" Text="{Binding Encounter.Start, StringFormat='yyyy-MM-dd'}" Grid.Row="5" Grid.Column="1" TextWrapping="Wrap" FontSize="14"/>
        <TextBlock Text="Ligos pav.:" Grid.Row="6" Grid.Column="0" FontSize="14"/>
        <TextBlock x:Name="tbDiseaseName" Text="{Binding ImmunizationRecommendation.InfectiousDiseaseDisplay}" Grid.Row="6" Grid.Column="1" TextWrapping="Wrap" FontSize="14"></TextBlock>
        <TextBlock Text="Vakcina:" Grid.Row="7" Grid.Column="0" FontSize="14"/>
        <TextBlock x:Name="tbVaccineName" Text="{Binding ImmunizationRecommendation.VaccineName}"  Grid.Row="7" Grid.Column="1" TextWrapping="Wrap" FontSize="14"/>
        <TextBlock Text="Dozės Nr.:" Grid.Row="8" Grid.Column="0" FontSize="14"/>
        <TextBlock x:Name="tbDoseNumber" Text="{Binding ImmunizationRecommendation.DoseNumber}" Grid.Row="8" Grid.Column="1" TextWrapping="Wrap" FontSize="14"/>
        <TextBlock Grid.Row="9" Grid.Column="0" FontSize="14" Text="Pastabos:"/>
        <TextBlock x:Name="tbNotes" Text="{Binding ImmunizationRecommendation.Description}" Grid.Row="9" Grid.Column="1" TextWrapping="Wrap" FontSize="14"/>
        <Separator x:Name="sep3" Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="tbDispenseHeader" Text="Išdavimo informacija" Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Left"/>
        <Separator x:Name="sep4" Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2"/>
        <TextBlock Grid.Row="13" Grid.Column="0" FontSize="14" Text="Išdavimo data:"/>
        <TextBlock x:Name="tbDispenseDate" Text="{Binding Immunization.Date, StringFormat='yyyy-MM-dd'}" Grid.Row="13" Grid.Column="1" TextWrapping="Wrap" FontSize="14"/>
        <TextBlock Grid.Row="14" Grid.Column="0" FontSize="14" Text="Vakcina:"/>
        <TextBlock x:Name="tbDispenseVaccineName" Text="{Binding Immunization.VaccineName}" Grid.Row="14" Grid.Column="1" TextWrapping="Wrap" FontSize="14"/>
        <TextBlock Grid.Row="15" Grid.Column="0" FontSize="14" Text="Vakcinos NPAKID7:"/>
        <TextBlock x:Name="tbDispenseVaccineNPAKID7" Text="{Binding Immunization.VaccineNPAKID7}" Grid.Row="15" Grid.Column="1" TextWrapping="Wrap" FontSize="14"/>
        <TextBlock Grid.Row="16" Grid.Column="0" FontSize="14" Text="Vakcinos galiojimo pabaiga:"/>
        <TextBlock x:Name="tbMedicineExpiryDate" Text="{Binding Immunization.MedicineExpiryDate, StringFormat='yyyy-MM-dd'}" Grid.Row="16" Grid.Column="1" TextWrapping="Wrap" FontSize="14"/>
        <TextBlock Grid.Row="17" Grid.Column="0" FontSize="14" Text="Vakcinos serijos nr.:"/>
        <TextBlock x:Name="tbDispenseVaccineSerie" Text="{Binding Immunization.VaccineSerieNumber}" Grid.Row="17" Grid.Column="1" TextWrapping="Wrap" FontSize="14"/>
        <TextBlock Grid.Row="18" Grid.Column="0" FontSize="14" Text="Įskiepyta:"/>
        <TextBlock x:Name="tbDispenseRoute" Text="{Binding Immunization.RouteDisplay}" Grid.Row="18" Grid.Column="1" TextWrapping="Wrap" FontSize="14"/>
        <TextBlock Grid.Row="19" Grid.Column="0" FontSize="14" Text="Įskiepyta vakcinos dozės nr.:"/>
        <TextBlock x:Name="tbDispenseDoseNumber" Text="{Binding Immunization.DoseNumber}" Grid.Row="19" Grid.Column="1" TextWrapping="Wrap" FontSize="14"/>
        <TextBlock Grid.Row="20" Grid.Column="0" FontSize="14" Text="Pastabos:"/>
        <TextBlock x:Name="tbDispenseNotes" Text="{Binding Immunization.Description}" Grid.Row="20" Grid.Column="1" TextWrapping="Wrap" FontSize="14"/>

    </Grid>
</UserControl>

