<UserControl x:Class="POS_display.wpf.View.wpfeRecipeList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS_display.wpf.View" 
             xmlns:eRecipe="clr-namespace:POS_display.Items.eRecipe" 
             xmlns:ViewModel="clr-namespace:POS_display.wpf.ViewModel" x:Name="uc"
             mc:Ignorable="d" d:DesignWidth="578" Height="610" Width="579" Background="White" FontFamily="Calibri" HorizontalAlignment="Stretch" FontSize="13">
    <UserControl.DataContext>
        <ViewModel:wpfeRecipeListViewModel />
    </UserControl.DataContext>
    <Grid x:Name="grRecipe" Margin="5,5,5,5" Width="579" Height="610">
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="95" />
            <ColumnDefinition Width="95" />
            <ColumnDefinition Width="95" />
            <ColumnDefinition Width="95" />
            <ColumnDefinition Width="95" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbPersonalCode" Text="{Binding PersonalCode}" Grid.Row="0" Grid.Column="0" Width="85"/>
        <Button x:Name="btnFind" Command="{Binding FindCommand}" Content="Ieškoti" Grid.Row="0" Grid.Column="1" Width="85" Grid.ColumnSpan="2" HorizontalAlignment="Left"/>
        <TextBlock x:Name="lblRepresented" Text="{Binding Represented}" Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="3" FontSize="14"/>
        <TextBlock x:Name="tbPatientName" Text="{Binding PatientName}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" FontSize="14"/>
        <TextBlock x:Name="tbGender" Text="{Binding Gender}" Grid.Row="1" Grid.Column="2" FontSize="14"/>
        <TextBlock x:Name="tbAllergies" Text="{Binding Allergies}" Grid.Row="1" Grid.Column="3" Grid.RowSpan="2" FontSize="14"/>
        <TextBlock Text="Gimimo data" Grid.Row="2" Grid.Column="0" FontSize="14"/>
        <TextBlock x:Name="tbBirthDate" Text="{Binding BirthDate}" Grid.Row="2" Grid.Column="1" FontSize="14"/>
        <TextBlock x:Name="tbAge" Text="{Binding Age}" Grid.Row="2" Grid.Column="2" FontSize="14"/>
        <ComboBox x:Name="cmbRelated" ItemsSource="{Binding Related}" Grid.ColumnSpan="2" Grid.Column="4" Grid.Row="1" Width="Auto"/>
        <ComboBox x:Name="cmbRepresented" ItemsSource="{Binding Represented}" Grid.ColumnSpan="2" Grid.Column="4" Grid.Row="2" Width="Auto"/>
        <Button x:Name="btnSell" Command="{Binding SellCommand}" Content="Išduoti vaistus" Grid.Row="5" Grid.Column="0" Margin="3,3,3,3" />
        <Button x:Name="btnReserve" Command="{Binding ReserveCommand}" Content="Rezervuoti" Grid.Row="5" Grid.Column="1" Margin="3,3,3,3" />
        <Button x:Name="btnSuspend" Command="{Binding SuspendCommand}" Content="Sustabdyti" Grid.Row="5" Grid.Column="2" Margin="3,3,3,3" />
        <Button x:Name="btnGetDispensePdf" Command="{Binding GetDispensePdfCommand}" Content="Parsisiųsti išdav." Grid.Row="5" Grid.Column="3" Margin="3,3,3,3" />
        <Button x:Name="btnRecipePdf" Command="{Binding GetRecipePdfCommand}" Content="Parsisiųsti rec." Grid.Row="5" Grid.Column="4" Margin="3,3,3,3" />
        <DataGrid x:Name="dataGrid" Grid.Row="6" Grid.ColumnSpan="6">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGrid}">
                    <Setter Property="ItemsSource" Value="{Binding}"/>
                    <Setter Property="FontSize" Value="11"/>
                    <Setter Property="RowHeight" Value="20"/>
                    <Setter Property="ColumnHeaderHeight" Value="20"/>
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="VerticalAlignment" Value="Stretch"/>
                    <Setter Property="AutoGenerateColumns" Value="False"/>
                    <Setter Property="HorizontalGridLinesBrush" Value="Gray"/>
                    <Setter Property="VerticalGridLinesBrush" Value="Gray"/>
                    <Setter Property="CanUserAddRows" Value="False"/>
                    <Setter Property="CanUserDeleteRows" Value="False"/>
                    <Setter Property="SelectionMode" Value="Extended"/>
                    <Setter Property="SelectionUnit" Value="FullRow"/>
                    <Setter Property="Background" Value="White"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding CompositionId}" Header="Išdavimo nr." IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding AuthorName}" Header="Vaistininkas" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding ProprietaryName}" Header="Firminis pavadinimas" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding DateWritten}" Header="Išrašymo data" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding QuantityValue}" Header="Išduotas kiekis" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
        <local:Navigation Grid.Row="7" Grid.ColumnSpan="6"/>
    </Grid>
</UserControl>
